<%= render partial: "layouts/navigation" %>

<h1>Вход</h1>
<% if flash[:alert] %>
<%= flash[:alert] %>
<% end %>

<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %>
	</div>
	
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	
	<%= submit_tag "Войти", class: "field button" %>
	
<% end %>
	
