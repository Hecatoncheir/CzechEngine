<% 'items' if items do %>
	<%= @items.each do |item| %>
		<article>
			<h1><%= item.title %></h1>
			<p><%= sanitize(item.text) %></p>
		</article>
	<% end %>

<% end %>


<% 'items_for_all' if items_for_all do %>

	<%= @item_for_all.each do |item| %>
		<article class="promotions">
			<div class="divider"></div>
			<h1><%= item.title %></h1>
			<p><%= sanitize(item.text) %></p>
		</article>
	<% end %>

<% end %>
