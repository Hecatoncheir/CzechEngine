<h1>Регистрация</h1>

<%= notice %>

<%= form_for @user do |f|%>

	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |message| %>
			<p><%= message %></p>
		<% end %>
	<% end %>
	
	<div>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>
	
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	
	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	
	<%= f.submit %>
	
<% end %>