/*PromoGallery*/
.PromoGallery {
	position:relative;
	margin-top:10px;
	width:432px;
	height:394px;
	float:left;
	background:url(<%= asset_path 'gallery_bg.jpg' %>) no-repeat;
}

.PromoGallery nav {
	position:absolute;
	right:0;
	top:78px;
	text-transform:uppercase;
}

.PromoGallery nav a  {
	color:#737373 !important;
	margin-bottom:10px;
}

.PromoGallery nav a:first-child {
	width:105px;
	height:44px;
	display:block;
	padding-left:20px;
}

.PromoGallery nav a:last-child {
	width:128px;
	height:30px;
	padding-right:20px;
}

.wrap .contant {
	margin-left:100px;
	padding:0;
	float:left;
	margin-top:10px;
	width:430px;
}

.wrap .contant article {
	margin-bottom:20px;
}

.wrap .contant article h1 {
	color:#6b6b6b;
	font-size:1.5em;
	font-family: Arial;
	margin-bottom:10px;
}

.wrap .contant article p {
	color: #959595;
	font-size:0.9em;
}

/*promotions*/

.wrap .contant .promotions h1 {
	margin-top:10px;
	color:#ff8a00;
	font-size:1em;
}
	
.wrap .contant .promotions p {font-size:0.8em;}

.clear {clear:both;}